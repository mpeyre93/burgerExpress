<h1> Welcome to Eat-Da-Burger!</h1>


<img src="/assets/img/Burger (2).png" alt="burger">


<div class="container">
    <div class="row justify-content-around">
        <div class="col-4" id="menu">
            <h2>Burger Menu:</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger eaten=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    
        <div class ="col-4" id="eaten">
            <h2>Burgers Devoured:</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger eaten=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <form class="col-4 create-form">
        <h4>Add a burger to the menu</h4>
        <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" name="name">
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>